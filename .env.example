# BayanLab Community Data Backbone - Environment Variables

# Database
DATABASE_URL=postgresql+asyncpg://bayan:bayan@localhost:5432/bayan_backbone
DATABASE_URL_SYNC=postgresql://bayan:bayan@localhost:5432/bayan_backbone

# API
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1

# Google Calendar API (optional - for accessing private shared calendars)
# Path to service account JSON credentials file
# Example: /path/to/bayanlab-calendar-credentials.json
# Leave empty to use only public ICS URLs
GOOGLE_APPLICATION_CREDENTIALS=

# Geocoding
GEOCODER_PROVIDER=nominatim
GEOCODER_USER_AGENT=BayanLab/1.0
GEOCODER_RATE_LIMIT=1.0

# Placekey (optional - leave empty to skip)
PLACEKEY_API_KEY=

# Region
DEFAULT_REGION=CO

# Logging
LOG_LEVEL=INFO

# SendGrid Email (optional - for sending confirmation emails)
SENDGRID_API_KEY=
SENDGRID_FROM_EMAIL=info@prowasl.com
SENDGRID_FROM_NAME="ProWasl"
SENDGRID_REPLY_TO=info@prowasl.com

# Internal Validation Tool (team access)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
INTERNAL_API_KEY=
ADMIN_API_KEY=
